    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "python": "${workspaceFolder}/venv/bin/python",
            "args": [
                "runserver",
                "0.0.0.0:9071"
            ],
            "django": true,
            "justMyCode": false  // We want to debug the libraries, too.
        }
    ]
}